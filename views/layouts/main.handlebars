    <body class="main-page">
        <header>
            <a href="/"><h1>Snoops</h1></a>
            <nav>
                <ul>
                    {{#if user}}

                        <li><a href="/users/settings/{{user._id}}">Hello, {{user.firstName}}!</a></li>
                        <li><a href="/chats/user/{{user._id}}">Messages</a></li>
                        <li><a href="/users/logout">Log out</a></li>
                    {{else }} {{#if acenter}}
                        <li><a href="/acenters/ac-dashboard/{{acenter._id}}">Hello, {{acenter.name}}!</a></li>
                        <li><a href="/chats/acenter/{{acenter._id}}">Messages</a></li>
                        <li><a href="/acenters/logout">Log out</a></li>

                    {{else}}
                        <li class="auth-links"><a
                                href="/users/login-page"
                            >Log in</a></li>
                        <li class="auth-links"><a
                                href="/users/signup-page"
                            >Sign up</a></li>
                    {{/if}}{{/if}}
                    <li><a href="/resources">Resources</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </header>
        {{{body}}}
        <footer>
            <p>&copy; 2023 Snoops</p>
        </footer>
        <script src="https://code.jquery.com/jquery-2.2.4.min.js"
        integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
