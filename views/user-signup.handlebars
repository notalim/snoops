<main>
    <div class="signup-wrapper">
        <div class="graphic-image">
            <img src="../assets/40444.jpg" alt="Graphic Image with dogs" />
        </div>
        <div class="form-container">
            <h2>User Sign Up</h2>
            <div
                id="error"
                class="alert alert-danger"
                style="display: none;"
            ></div>
            <form id="signup-form" method="POST" action="/users/signup">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        value="{{email}}"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        required
                    />
                </div>
                <div class="form-group">
                    <div id="error" class="error">
                        {{#if error}}
                            {{error}}
                        {{/if}}
                    </div>
                    <label for="first-name">First Name</label>
                    <input
                        type="text"
                        id="firstName"
                        name="firstName"
                        value="{{firstName}}"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="last-name">Last Name</label>
                    <input
                        type="text"
                        id="lastName"
                        name="lastName"
                        value="{{lastName}}"
                        required
                    />
                </div>
                <div class="form-group">
                    <label>Date of Birth</label>
                    <input type="date" id="dob" name="dob" value="{{dob}}" />
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input
                        type="tel"
                        id="phone"
                        name="phone"
                        value="{{phone}}"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <textarea
                        id="address"
                        name="address"
                        value="{{address}}"
                        required
                    ></textarea>
                </div>
                <button type="submit">Sign Up</button>
                <a href="#" onclick="switchToAcenterSignup()">Switch to Acenter
                    Signup</a>
            </form>
        </div>
    </div>
    <script>
        function switchToAcenterSignup() { window.location.href =
        "/acenters/signup-page"; }
    </script>
    <script>
        (function () { var errorMessage = "{{error}}"; if (errorMessage) {
        document.getElementById("error-message").style.display = "block";
        document.getElementById("error-message").innerHTML = errorMessage; }
        })();
    </script>
</main>