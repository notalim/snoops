<main>
    <div class="signin-wrapper">
        <div class="graphic-image">
            <img src="../assets/40444.jpg" alt="" />
        </div>
        <div class="form-container">
            <h2>Adoption Center Log in</h2>
            <div id="error" class="error">
                {{#if error}}
                    {{error}}
                {{/if}}
            </div>
            <form id="ac-login-form" method="POST" action="/acenters/login">
                    <label class="acEmailLabel" for="email">Email</label>
                    <input class="acEmailInput" type="email" id="email" name="email" required />

                    <label class="acPasswordLabel" for="password">Password</label>
                    <input
                        class="acPasswordInput"
                        type="password"
                        id="password"
                        name="password"
                        required
                    />
                <button type="submit">Log in</button>
                <a href="#" onclick="switchToUserLogin()">Switch to User Login</a>
            </form>
        </div>
    </div>

    <script>
        function switchToUserLogin() { window.location.href =
        "/users/login-page"; }
    </script>

</main>