<main>
    <div class="signin-wrapper">
        <div class="graphic-image">
            <img src="../assets/40444.jpg" alt="Graphic Image with dogs" >
        </div>
        <div class="form-container">
            <h2 class="Loginh2">Adoption Center Log in</h2>
            <div id="error" class="error">
                {{#if error}}
                    {{error}}
                {{/if}}
            </div>
            <form class = "login-form" id="login-form" method="POST" action="/acenters/login">
                    <label class="acLabel" for="email">Email</label>
                    <input 
                        class="acInput" 
                        type="email" 
                        id="email" 
                        name="email"
                        placeholder="Email"
                        required 
                    >

                    <label class="acLabel" for="password">Password</label>
                    <input
                        class="acInput"
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Password"
                        required
                    >
                <button class="LoginSubmit" type="submit">Log in</button>
                <a class="switchLogin" href="#" onclick="switchToUserLogin()">User Login</a>
                <a class="switchLogin" href="#" onclick="switchToACSignup()">Create an Account</a>

            </form>
        </div>
    </div>

    <script>
        function switchToUserLogin() { window.location.href =
        "/users/login-page"; }
        function switchToACSignup() { window.location.href =
        "/acenters/signup-page"; }
    </script>
    <script type="module" src="/js/login-validation.js">
    </script>

</main>