                        <input 
                            type="file" 
                            name="image" 
                            id="dogUpdateImage" 
                            accept=".jpeg,.png,.HEIC,.img"
                        >
                    </div>
                    <div class="update-dog-form-right">
                        <input
                            type="text"
                            name="name"
                            id="dogUpdateName"
                            placeholder="Name"
                        >
                        <input
                            type="date"
                            name="dob"
                            id="dogUpdateDob"
                        >
