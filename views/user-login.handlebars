<main>
    <div class="signin-wrapper">
        <div class="graphic-image">
            <img src="../assets/40444.jpg" alt="Graphic Image with dogs" />
        </div>
        <div class="form-container">
            <h2>Log in</h2>
            <div
                id="error"
                class="alert alert-danger"
                style="display: none;"
            ></div>
            <form id="login-form" method="POST" action="/users/login">
                <div id="error" class="error">
                    {{#if error}}
                        {{error}}
                    {{/if}}
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        value="{{email}}"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        required
                    />
                </div>
                <button type="submit">Log in</button>
                <a href="#" onclick="switchToAcLogin()">Switch to Adoption
                    Center Login</a>
            </form>
        </div>
    </div>

    <script>
        function switchToAcLogin() { window.location.href =
        "/acenters/login-page"; }
    </script>
    <script type="module" src="/js/login-validation.js">
    </script>

</main>