<main>
    <div class="signin-wrapper">
        <div class="graphic-image">
            <img src="../assets/40444.jpg" alt="" />
        </div>
        <div class="form-container">
            <h2>Log in</h2>
            <div
                id="error-message"
                class="alert alert-danger"
                style="display: none;"
            ></div>
            <form id="login-form" method="POST" action="/users/user-login">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        required
                    />
                </div>
                <button type="submit">Log in</button>
                <a href="#" onclick="switchToAcLogin()">Switch to Adoption
                    Center Login</a>
            </form>
        </div>
    </div>

    <script>
        function switchToAcLogin() { window.location.href =
        "/acenters/login-page"; }
    </script>

</main>